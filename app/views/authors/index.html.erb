<div id="page-content">
  <h1 class="text-center mt-4">Listing all Authors</h1>

  <div class="container">
    <% @authors.each do |author| %>
      <div class="row justify-content-md-center">
        <div class="col-8 mt-4">
          <div class="card text-center shadow mb-5 bg-white rounded">
            <div class="card-header">
              Featured
            </div>
            <div class="card-body">
              <h5 class="card-title"><%=link_to "#{author.first_name} #{author.last_name}", author_path(author), class: "text-success"%></h5>
              <p class="card-text"><%= truncate(author.biography, length: 100) %></p>
              <%= link_to "View", author_path(author), class: "btn btn-outline-success" %>
              <%= link_to "Edit", edit_author_path(author), class: "btn btn-outline-info" %>
              <%= link_to "Delete", author_path(author), method: :delete, data: { confirm: "Are you sure?"}, class: "btn btn-outline-danger" %>
            </div>
            <div class="card-footer text-muted">
              <small>
                <%="Created #{time_ago_in_words(author.created_at)} ago," %>
                <%="updated #{time_ago_in_words(author.updated_at)} ago" %>
              </small>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <p><%= link_to 'New Author', new_author_path %> |
  <%= link_to 'Articles', articles_path %></p>

</div>
