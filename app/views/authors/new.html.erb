<h1>New Author</h1>

<% if @author.errors.any? %>
  <h2>The following errors prevented the author from being saved</h2>
  <ul>
    <% @author.errors.full_messages.each do |msg|%>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with scope: :author, url: authors_path, local: true  do |f| %>
  <p>
    <%= f.label :first_name %>
    <%= f.text_field :first_name %>
  </p>
  
  <p>
    <%= f.label :last_name %>
    <%= f.text_field :last_name %>
  </p>
  
  <p>
    <%= f.label :biography %>
    <%= f.text_area :biography %>
  </p>
  
  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to 'Back to Authors', authors_path %>
