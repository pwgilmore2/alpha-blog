<div class="container">
  <% if @author.errors.any? %>
    <h2>The following errors prevented the author from being saved</h2>
    <ul>
      <% @author.errors.full_messages.each do |msg|%>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>

  <div class="row justify-content-center">
    <div class="col-10">
    <%= form_with(model: @author, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
      <div class="form-group row">
        <%= f.label :first_name, class: "col-2 col-form-label" %>
        <div class="col-10">
          <%= f.text_field :first_name, class: "form-control" %>
        </div>
      </div>
      
      <div class="form-group row">
        <%= f.label :last_name, class: "col-2 col-form-label" %>
        <div class="col-10">
          <%= f.text_field :last_name, class: "form-control" %>
        </div>
      </div>
      
      <div class="form-group row">
        <%= f.label :biography, class: "col-2 col-form-label" %>
        <div class="col-10">
          <%= f.text_area :biography, class: "form-control" %>
        </div>
      </div>
      
      <div class="form-group-row justify-content-center">
        <%= f.submit class:"btn btn-outline-light btn-lg" %>
      </div>
    <% end %>
    </div>
    <%= link_to 'Back to Authors', authors_path %>
  </div>
</div>
